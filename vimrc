" Enable control backspace
inoremap <C-H> <C-W>



" Insert UTC date with f7
nnoremap <F7> :silent r !date -u +"\%Y-\%m-\%d \%H:\%M:\%S"<CR>




syntax on
set clipboard=unnamedplus
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set number
set ignorecase
set hlsearch
set ruler
set noswapfile
set colorcolumn=80



